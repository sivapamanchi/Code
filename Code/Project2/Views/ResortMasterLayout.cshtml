@inherits UmbracoViewPage<BGModern.Models.ResortModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        @RenderSection("Metadata", false)

        <title>	Bluegreen Vacations - Share Happiness </title>
        
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <link href="@Html.GetFullSitePath()/css/owner.css" rel="stylesheet" rev="stylesheet">
        <link href="@Html.GetFullSitePath()/css/style.css" rel="stylesheet" rev="stylesheet">
        <link href="@Html.GetFullSitePath()/css/ResortMasterLayout.css" rel="stylesheet" rev="stylesheet" />
        <link href="@Html.GetFullSitePath()/css/ucmenu.css" rel="stylesheet" type="text/css">
        <link href="@Html.GetFullSitePath()/css/BluegreenRespNav.css" rel="stylesheet" type="text/css">
        
        <!-- SCRIPTS -->
        @*<script src="@Html.GetFullSitePath()/scripts/dtagent61_n_7888.js" type="text/javascript" data-dtconfig="rid=RID_1103586947|rpid=1017960642|domain=bluegreenowner.com|tp=500,50,0|reportUrl=/dynatrace/js/dynaTraceMonitor"></script>*@
        <script>
            window.jQuery || document.write('<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"><\/script>')
        </script>
        <script src="@Html.GetFullSitePath()/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
        <script src="@Html.GetFullSitePath()/scripts/prototype.js" type="text/javascript"></script>
        <script src="@Html.GetFullSitePath()/scripts/scriptaculous.js" type="text/javascript"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
        <script src="@Html.GetFullSitePath()/scripts/BluegreenRespNav.js"></script>
        <script src="@Html.GetFullSitePath()/scripts/timeout-dialog.js" type="text/javascript"></script>
        <script type="text/javascript">
            // put this is here so that external scripts (such as planItBluegreen.js) can be written to dynamically build links to pages based on the environment in which it is deployed.
            var rootURL = "@System.Configuration.ConfigurationManager.AppSettings["bxgwebSecureURL"]";
        </script>
        <script src="~/scripts/jQscripts.js" type="text/javascript"></script>
        <script src="~/scripts/qm.js" type="text/JavaScript"></script>
        <style type="text/css">
            #nav_links_background {
                background-color: #c0c0c0;
                width: 20em;
            }

            .auto-style1 {
                height: 23px;
            }

            .roundedPanel {
                width: 500px;
                background-color: #E8E8E8;
                padding-top: 10px;
            }

            ul li .submenu {
                padding: 5px 5px 5px 5px;
                vertical-align: middle;
                padding-bottom: 5px;
                border-bottom: dotted;
                border-bottom-width: thin;
                font-size: 14px !important;
                font-weight: 400 !important;
            }

            #bgGlobalMenu .nav.navbar-menu .navbar-menu-flyout li a:not(.btn), #bgGlobalMenu .nav.navbar-submenu a, #bgGlobalMenu .nav.navbar-submenu span {
                font-family: CartoGothicBook,-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen-Sans,Ubuntu,Cantarell,Arial,"Helvetica Neue",Helvetica,sans-serif !important;
                font-weight: 400 !important;
                font-size: 14px !important;
            }

            .modal-window {
                top: 85px !important;
            }
        </style>
        @RenderSection("PageStyles",false)
        @RenderSection("PageScript", false)
    </head>
    <body class="center">
        <!-- Google Tag Manager -->
        <script type="text/javascript">
            dataLayer = [];
        </script>
        <noscript><iframe src="//www.googletagmanager.com/ns.html?id=@System.Configuration.ConfigurationManager.AppSettings["GtmContainerId"]"
        height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
        <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
        new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
        '//www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer','@System.Configuration.ConfigurationManager.AppSettings["GtmContainerId"]');</script>
        <!-- End Google Tag Manager -->
        @{Html.RenderAction("SitecoreIndex", "SiteTopNav");}
        <div class="container" style="max-width:800px;">
            <br />
            <div class="row center" id="SiteMenu" style="padding-bottom:40px;">
              
            </div>
            <br />
            <div class="row">
                <div class="col-xs-12" style="padding:0 0 0 0;">
                    <div style="float:left; padding-left:0;">
                        <div>
                            @{
                                Html.RenderPartial("BreadcrumbNavigation", Model);
                            }
                        </div>
                    </div>
                    <div style="float:right; padding-right:0;">
                        <div>
                            @{
                                Html.RenderAction("OwnerPointsAndSignOff", "OwnerPointsAndSignOff");
                            }
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-xs-12 page-title" style="padding:0 0 1px 0;">
                    <div style="float:left;padding-left:0;">
                        <div style="padding-left:0; font-family:Arial, Helvetica, sans-serif; font-size:medium;">@Model.Name</div>
                    </div>
                    <div style="padding-right:0; float:right;">
                        <div>
                            @{
                                Html.RenderAction("ResortQuickSelect", "ResortQuickSelect");
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12" id="LeftColumn" style="padding-left:0;">
                    <div class="resortAddress" style="padding:5px 0 5px 0; border-bottom:dotted; border-bottom-width:thin;">
                        <div class="hidden-xs">
                            <div class="hidden-sm">
                                @Model.Address1<br />
                                @Model.City, @Model.State &nbsp;@Model.Zip<br />
                                @Model.Phone
                                
                                @RenderSection("ResortAddress", false)
                                <br />
                                <div style="padding-top: 5px; padding-bottom: 5px;">
                                    <img id="imgClub" style="cursor: pointer" height="12" src="@Model.ClubImage"
                                         onclick="newWin = window.open('@Html.GetParentSitePath()/owner/helpClub.aspx', 'newWin2', 'toolbar=no,location=no,directories=no,status=no,menubar=no,scrollbars=yes,resizable=no,width=220,height=400,left=50,top=50'); return false;" />

                                </div>
                            </div>
                        </div>
                        <div class="hidden-md">
                            <div class="hidden-lg">
                                <div class="width:100%;">
                                    @Model.Address1 &nbsp;
                                    @Model.City, @Model.State &nbsp;@Model.Zip &nbsp;
                                    @Model.Phone &nbsp;
                                </div>

                                @RenderSection("ResortAddress", false)
                                <img id="imgClub" style="cursor: pointer" height="12" src="@Model.ClubImage"
                                     onclick="newWin = window.open('@Html.GetParentSitePath()/owner/helpClub.aspx', 'newWin2', 'toolbar=no,location=no,directories=no,status=no,menubar=no,scrollbars=yes,resizable=no,width=220,height=400,left=50,top=50'); return false;" />

                            </div>
                        </div>
                    </div>

                    <nav id="nav-main">                        
                        <ul style="padding-left:0; list-style-type:none; text-align:left;">
                            @{
                            if (Model.NodeURL != null && Model.NodeURL.Trim().Length > 0)
                            {
                                <li><a class="submenu" href="@Model.NodeURL">Resort Description</a></li>
                            }
                            }
                            @{
                            if (Model.URLResortPhotos != null && Model.URLResortPhotos.Trim().Length > 0)
                            {
                                <li><a class="submenu" href="@Model.URLResortPhotos">Photos</a></li>
                            }
                            }
                            @{
                            if (Model.URLResortAmenities != null && Model.URLResortAmenities.Trim().Length > 0)
                            {
                                <li><a class="submenu" href="@Model.URLResortAmenities">Amenities</a></li>
                            }
                            }
                            @{
                            if (Model.URLResortFloorPlans != null && Model.URLResortFloorPlans.Trim().Length > 0)
                            {
                                <li><a class="submenu" href="@Model.URLResortFloorPlans">Floor Plans</a></li>
                            }
                            }
                            @{
                            if (Model.URLResortActivities != null && Model.URLResortActivities.Trim().Length > 0)
                            {
                                <li><a class="submenu" href="@Model.URLResortActivities">Resort Activities</a></li>
                            }
                            }
                            @{
                            if (Model.URLResortNotes != null && Model.URLResortNotes.Trim().Length > 0)
                            {
                                <li><a class="submenu" href="@Model.URLResortNotes">Important Notes</a></li>
                            }
                            }
                            @{
                            if (Model.URLResortMapAndDirection != null && Model.URLResortMapAndDirection.Trim().Length > 0)
                            {
                                <li><a class="submenu" href="@Model.URLResortMapAndDirection">Map &amp; Directions</a></li>
                            }
                            }
                            @{
                            if (Model.URLResortAreaInformation != null && Model.URLResortAreaInformation.Trim().Length > 0)
                            {
                                <li><a class="submenu" href="@Model.URLResortAreaInformation">Area Information</a></li>
                            }
                            }
                            @{
                            if (Model.URLResortWeather != null && Model.URLResortWeather.Trim().Length > 0)
                            {
                                <li><a class="submenu" href="@Model.URLResortWeather">Weather</a></li>
                            }
                            }
                            @{
                            if (Model.URLResortFoodAndBeverage != null && Model.URLResortFoodAndBeverage.Trim().Length > 0)
                            {
                                <li><a class="submenu" href="@Model.URLResortFoodAndBeverage">Food &amp; Beverage</a></li>
                            }
                            }
                            @{
                            if (Model.URLResortResortMap != null && Model.URLResortResortMap.Trim().Length > 0)
                            {
                                <li><a class="submenu" href="@Model.URLResortResortMap">Resort Map</a></li>
                            }
                            }
                            @{
                            if (Model.URLResortPointsTable != null && Model.URLResortPointsTable.Trim().Length > 0 && Model.VacationOrSamplerOwner)
                            {
                                <li><a class="submenu" href="@Model.URLResortPointsTable">Points Table</a></li>
                            }
                            }
                            @{
                            if (Model.URLAssociationOwners != null && Model.URLAssociationOwners.Trim().Length > 0 && Model.IsOasisLakesCondominiumAssociationMember)
                            {
                                <li><a class="submenu" href="@Model.URLAssociationOwners">Association Owners</a></li>
                            }
                            }
                        </ul>
                    </nav>

                    <div id="nav-trigger">
                        <span>Resort Info</span>
                    </div>
                    <nav id="nav-mobile"></nav>

                    @RenderSection("FeaturedVideos", false)
                    @RenderSection("Callouts", false)
                </div>
                <div id="MainBody" class="col-lg-9 col-md-9 col-sm-9 col-xs-12" style="margin:0 auto; padding:0;">
                    @RenderBody()
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12" id="LeftColumn" style="padding-left:0; clear: left;">
                    @if (@Model.AdvisorBadge != "")
                    {
                        @Html.Raw(@Model.AdvisorBadge)
                    }
                </div>
            </div>
            <div class="row">
                <div>
                    @{Html.RenderPartial("SiteFooter");}
                </div>
            </div>
        </div>
        <script type="text/javascript">
            jQuery(document).ready(function () {
                jQuery.timeoutDialog({ timeout: ((@System.Web.HttpContext.Current.Session.Timeout - 1) * 60), countdown: 30, keep_alive_url:rootURL + 'BGModern/umbraco/surface/KeepAlive/KeepAlive', logout_redirect_url: rootURL + 'SignOff.aspx', restart_on_yes: true });
                parseHomeMenu();
                applyMenuBehavior();
                jQuery("#nav-mobile").html(jQuery("#nav-main").html());
                jQuery("#nav-trigger span").click(function () {
                    jQuery("nav#nav-mobile ul li a").addClass("col-xs-4")
                    
                    if (jQuery("nav#nav-mobile ul").hasClass("expanded")) {
                        jQuery("nav#nav-mobile ul.expanded").removeClass("expanded").slideUp(250);
                        jQuery(this).removeClass("open");
                    } else {
                        jQuery("nav#nav-mobile ul").addClass("expanded").slideDown(250);
                        jQuery(this).addClass("open");
                    }
                });
            });
        </script>
        <!-- Google Analytics Start -->
        <script type="text/javascript">
            var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
            document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
        </script>

        <script type="text/javascript">
            var pageTracker = _gat._getTracker("UA-2018410-2");
            pageTracker._initData();
            pageTracker._trackPageview();
        </script>
        <!-- Google Analytics End -->      
        <link rel="stylesheet" type="text/css" href="@Html.GetSitecorePath()/assets/fonts/cartogothic/style.css" media="screen"> 
        <link rel="stylesheet" type="text/css" href="@Html.GetSitecorePath()/assets/css/bgmenu.css?ver=1.0">
        <script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="@Html.GetSitecorePath()/assets/js/bluegreen/bgmenu.js?ver=1.0"></script>
        
</body>
</html>
