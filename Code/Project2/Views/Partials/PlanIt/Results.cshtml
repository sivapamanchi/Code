<style type="text/css">
    [name='bookIt'] > a.waiting:after {
        content: url("@Html.GetFullSitePath()/Content/Images/ajax-loader-transparent.gif");
    }
</style>

<div class="row">
    <div id="ReservationSearch_results" class="col-xs-12 col-sm-12 col-mg-12 col-lg-12" style="padding: 0px; margin-left: 10px;">
        <div name="searchResults" class="container hiddenTemplate" style="width: 100%;">
            <div class="container" style="width: 100%; padding-left: 0px;">
                <div class="row">
                    <div id="resortInfo">
                        <div name="ResortInfo_photo" class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                            <a><img /></a>
                        </div>

                        <div name="ResortInfo_summary" class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
                            <a name="resortName" class="resortDatalink"></a>
                            <div name="address1"></div>
                            <div name="address2"></div>
                            <div>
                                <span name="city"></span>, <span name="state"></span> <span name="postalCode"></span>
                            </div>
                            <div name="phone"></div>
                            <a name="learnMore" class="resortDatalink">
                                <img src="@Html.GetFullSitePath()/Content/images/btn_learnMore.gif" width="69" height="20" border="0" alt="learn more">
                            </a>
                        </div>
                    </div>

                    <table name="resultsTable" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <thead>
                            <tr class="resortDataw">
                                <td name="checkIn" width="15%">Check-In</td>
                                <td name="checkOut" width="15%">Check-Out</td>
                                <td name="unitType" width="25%">Villa Size/Type</td>
                                <td name="maximumOccupancy" width="10%">Max Occup.</td>
                                <td name="seasonName" width="7%">Season</td>
                                <td name="totalPoints" width="11%">Total Points</td>
                                <td name="dailyRate" width="7%">DailyRate</td>
                                <td name="totalPrice" width="11%">Total Price w/Tax</td>
                                <td name="bookIt" width="13%">
                                    <img src="@Html.GetFullSitePath()/Content/images/tblCheck.gif" align="absmiddle" border="0" height="12" width="31">
                                    Available
                                </td>
                            </tr>
                        </thead>

                        <tbody>
                            <tr name="info" class="hiddenTemplate">
                                <td name="checkIn"></td>
                                <td name="checkOut"></td>
                                <td name="unitType"></td>
                                <td name="maximumOccupancy"></td>
                                <td name="seasonName"></td>
                                <td name="totalPoints">
                                    <a href="javascript:void(0)"></a>
                                </td>
                                <td name="dailyRate"></td>
                                <td name="totalPrice"></td>
                                <td name="bookIt">
                                    <div>
                                        <a href="javascript:void(0)">
                                            <img src="~/Content/Images/bookitBtn.gif" />
                                        </a>
                                        <div name="unitCount"></div>
                                    </div>
                                </td>
                            </tr>

                            <tr name="description" class="hiddenTemplate">
                                <td colspan="7"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div name="stateSection" class="hiddenTemplate">
            @* State expander header *@
            <div name="stateHeader">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding-left: 0px; padding-right: 0px;">
                    <span name="stateName"></span> (<span name="resortCount"></span> Resort<span name="resortsPlural">s</span> Available)
                    <span name="expandLink" class="closed" style="float: right;"></span>
                </div>
            </div>

            <div name="stateResortsList" style="display: none;">
                <div name="stateResort" class="hiddenTemplate">
                    @* Resort expander header *@
                    <div name="stateResortHeader">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding-left: 0px; padding-right: 0px;">
                            <span name="resortName"></span>
                            <span name="expandLink" class="closed" style="float: right;"></span>
                        </div>
                    </div>

                    @* Search results table gets appended here *@
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    //
    // Override the default settings to point to the parent directory
    //
    HelpBalloon.Options.prototype = Object.extend(HelpBalloon.Options.prototype, {
        icon: '/BGModern/Content/Images/icon.gif',
        button: '/BGModern/Content/Images/button.png',
        balloonPrefix: '/BGModern/Content/Images/balloon-'
    });
</script>
