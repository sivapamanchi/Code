<script type="text/javascript">
    jQuery(document).ready(function () {
            ///Hide Show Detail/Summary
            jQuery('.tabs-menu a').click(function (event) {
            event.preventDefault();
            jQuery(this).parent().addClass('current');
            jQuery(this).parent().siblings().removeClass('current');
            var tab = jQuery(this).attr('href');
            // jQuery(".tab-content").not(tab).css("display", "none");
            jQuery(tab).closest('.tab').find('.tab-content').not(tab).css('display', 'none');
            // jQuery(this).find(".tab-content").not(tab).css("display", "none");
            jQuery(tab).show();
            return false;
            });

        //Table Sort
            jQuery('#grdCurrentpointsSummary').tablesorter();
            jQuery('#grdCurrentpointsDetail').tablesorter();
            jQuery('#grdFuturepointsSummary').tablesorter();
            jQuery('#grdFuturepointsDetail').tablesorter();
            return false;
            });
</script>

