@model BGModern.Models.MyPointsListModel

<script type="text/javascript" src="~/Scripts/jquery.tablesorter.min.js"></script>
<span class="clsPointsHeading">Current Points</span>
<div id="tabs-container1" class="plainTab">
    <ul class="tabs-menu">
        <li class="current"><a href="#CurrentpointsSummary">Summary</a></li>
        <li><a href="#CurrentpointsDetail">Detail</a></li>
    </ul>
    <div id="tabsCurrent" class="tab">
        <div id="CurrentpointsSummary" class="tab-content">

            <!-- new Summary points grid -->
            <div id="UpdatePanel1">
                <div id="Panel2">
                    <table class="reservData" cellspacing="0" cellpadding="0" width="100%" border="0">
                        <tr>
                            <td>
                                <div>
                                    <table class="resortDataw" border="1" id="grdCurrentpointsSummary" style="width:100%;border-collapse:collapse;">
                                        <thead>
                                            <tr class ="resortDataw" style="text-align:center;background-color:#333333;">
                                                <th style="text-align:center;text-decoration:underline;width:25%;padding-bottom:.10em;cursor:pointer;">Point Type</th>
                                                <th style="text-align:center;text-decoration:underline;width:25%;padding-bottom:.10em;cursor:pointer;">Available Points</th>
                                                <th style="text-align:center;text-decoration:underline;width:25%;padding-bottom:.10em;cursor:pointer;">Expire Date</th>
                                                <th style="text-align:center;text-decoration:underline;width:25%;padding-bottom:.10em;cursor:pointer;">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var datavalue in Model.CurrentSummaryPoints)
                                        {
                                            <tr>
                                                <td class="resortData" align="center" style="text-align:center;color:#666666;background-color:#CCCCCC;font-weight:bold;">@datavalue.PointTypeDesc</td>
                                                <td class="resortData" align="center" style="text-align:center;color:#666666;background-color:#CCCCCC;font-weight:bold;">@string.Format("{0:#,###}", datavalue.PointBal)</td>
                                                <td class="resortData" align="center" style="text-align:center;color:#666666;background-color:#CCCCCC;font-weight:bold;">@string.Format("{0:MM/dd/yyyy}", datavalue.ExpireDate)</td>
                                                <td class="resortData" align="center" style="text-align:center;color:#666666;background-color:#CCCCCC;font-weight:bold;">@datavalue.Action</td>
                                            </tr>
                                        }
                                       </tbody>
                                    </table>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <!-- end new Summary points grid -->
        </div>
        <div id="CurrentpointsDetail" class="tab-content">
            <!-- new Details points grid -->
            <div id="UpdatePanel2">
                <div id="Panel3">
                    <table class="reservData" cellspacing="0" cellpadding="0" width="100%" border="0">
                        <tr>
                            <td>
                                <div>
                                    <table class="resortDataw" border="1" id="grdCurrentpointsDetail" style="width:100%;border-collapse:collapse;">
                                        <thead>
                                            <tr class="resortDataw" style="text-align:center;background-color:#333333;">
                                                <th style="text-align:center;text-decoration:underline;width:25%;padding-bottom:.10em;cursor:pointer;">Account #</th>
                                                <th style="text-align:center;text-decoration:underline;width:15%;padding-bottom:.10em;cursor:pointer;">Available Points</th>
                                                <th style="text-align:center;text-decoration:underline;width:15%;padding-bottom:.10em;cursor:pointer;">Expire Date</th>
                                                <th style="text-align:center;text-decoration:underline;width:15%;padding-bottom:.10em;cursor:pointer;">Point Type</th>
                                                <th style="text-align:center;text-decoration:underline;width:15%;padding-bottom:.10em;cursor:pointer;">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var datavalue in Model.CurrentDetailPoints)
                                            {
                                                <tr>
                                                    <td class="resortData" align="center" style="text-align:center;color:#666666;background-color:#CCCCCC;font-weight:bold;">@datavalue.AcctNum</td>
                                                    <td class="resortData" align="center" style="text-align:center;color:#666666;background-color:#CCCCCC;font-weight:bold;">@string.Format("{0:#,###}", datavalue.PointBal)</td>
                                                    <td class="resortData" align="center" style="text-align:center;color:#666666;background-color:#CCCCCC;font-weight:bold;">@string.Format("{0:MM/dd/yyyy}", datavalue.ExpireDate)</td>
                                                    <td class="resortData" align="center" style="text-align:center;color:#666666;background-color:#CCCCCC;font-weight:bold;">@datavalue.PointTypeDesc</td>
                                                    <td class="resortData" align="center" style="text-align:center;color:#666666;background-color:#CCCCCC;font-weight:bold;">@datavalue.Action</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <!-- end new Detail points grid -->
        </div>
    </div>
</div>
<br />

