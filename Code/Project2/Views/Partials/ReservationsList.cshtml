                </th>
                <th class="resortDataw" style="text-align: center; color:#FFFFFF; padding: 3px;">
                    Type
                </th>
                <th class="resortDataw" style="text-align: center; color:#FFFFFF; padding: 3px;">
                    Points
                </th>
            </tr>
        </thead>
        <tbody>
            @{int y = 0;}

                @if (@Model.PastReservations != null)
                {
                    foreach (var datavalue in Model.PastReservations)
                    {
                        y++;
                        string rowColor;
                        if (y % 2 == 0)
