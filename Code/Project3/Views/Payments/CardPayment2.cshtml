@using Sitecore.Mvc.Configuration
@using BGSitecore.Models.Payments
@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<CardPayment>

    <div class="row">
        <div class="col-xs-4 col-sm-3 col-md-3">
            <div class="form-group is-required">
                <label for="total-payment" class="control-label"><strong>@Editable(x => x.TotalPayment)</strong></label>
                <div class="input-group">
                    <span class="input-group-addon">@Sitecore.Globalization.Translate.Text("Payment_Currency")</span>
                    <input type="text" name="total_payment" class="form-control" value="@Model.AmountString" required="" disabled="">
                </div><!-- .input-group -->
            </div><!-- .form-group -->
        </div>
    </div><!-- .row -->
    <div class="row">
        <div class="col-xs-9 col-sm-6 col-md-6 col-lg-5">
            <div class="form-group is-required">
                <label class="control-label"><strong>Name</strong> <span class="legal">as it appears on your card</span></label>
                <input type="text" name="cc_name" class="form-control" value="" required="">

            </div><!-- .form-group -->
        </div>
    </div><!-- .row -->

    <div class="row">
        <div class="col-xs-12">
            <div class="form-group is-required">
                <label class="control-label" for="cc_number"><strong>Card Number</strong> <span class="legal">no dashes or spaces</span></label>
                <div class="row">
                    <div class="col-xs-8 col-sm-6 col-md-5 col-lg-4">

                        <div class="input-group">
                            <input type="number" name="cc_number" id="cc_number" class="form-control input-credit-card" value="" required="">
                            <span class="input-group-addon"><i class="fa fa-fw fa-lg fa-credit-card-alt" aria-hidden="true"></i></span>
                        </div><!-- .input-group -->

                    </div>
                </div><!-- .row -->
            </div><!-- .form-group -->

            <div class="hide-if-js credit-card-type">
                <fieldset class="form-group is-required">
                    <label class="control-label"><strong>Card Type</strong></label>
                    <div class="radio">
                        <label class="control-label"><input type="radio" name="card_type" id="cc_type_amex" value="american-express"> American Express</label>
                    </div><!--.radio -->
                    <div class="radio">
                        <label class="control-label"><input type="radio" name="card_type" id="cc_type_discover" value="discover"> Discover</label>
                    </div><!--.radio -->
                    <div class="radio">
                        <label class="control-label"><input type="radio" name="card_type" id="cc_type_mastercard" value="mastercard"> MasterCard</label>
                    </div><!--.radio -->
                    <div class="radio">
                        <label class="control-label"><input type="radio" name="card_type" id="cc_type_visa" value="visa" checked=""> Visa</label>
                    </div><!--.radio -->
                </fieldset><!-- .form-group -->
            </div>

        </div>
    </div><!-- .row -->

    <div class="row">
        <div class="col-xs-12">
            <div class="form-group is-required">
                <label class="control-label" for="cc_ccv"><strong>CVV</strong></label>
                <div class="row">
                    <div class="col-xs-4 col-sm-2 col-md-2">
                        <input type="number" name="cc_cvv" id="cc_ccv" class="form-control" value="123" required="" autocomplete="off">
                    </div><!-- .form-group -->
                </div><!-- .row -->

                <div class="row">
                    <div class="col-xs-12">
                        <a tabindex="0" role="button" class="info-tooltip small" data-content-id="what-is-cvv" data-original-title="" title="">What is a CVV?</a>

                        <div class="sr-only sr-only-focusable popover-content" id="what-is-cvv">
                            <p>Visa, MasterCard, Discover is the last 3 digits on the back of card.</p>
                            <p>American Express is the last 4 digits in small print on the front of the card.</p>
                        </div>
                    </div>
                </div><!-- .row -->
            </div><!-- .form-group -->
        </div>
    </div><!-- .row -->

    <div class="row">
        <div class="col-xs-12">
            <div class="form-group is-required">
                <label class="control-label" for="cc_exp"><strong>Expiration Date</strong> <span class="legal">MM/YY</span></label>
                <div class="row">
                    <div class="col-xs-4 col-sm-2 col-md-2">
                        <input type="text" name="cc_exp" id="cc_exp" class="form-control" value="" required="" autocomplete="off">
                    </div>
                </div><!-- .row -->
            </div><!-- .form-group -->
        </div>
    </div><!-- .row -->


    <div class="row">
        <div class="col-xs-12">
            <div class="form-group is-required">
                <label class="control-label" for="cc_postal_code"><strong>Billing Zip/Postal Code</strong></label>
                <div class="row">
                    <div class="col-xs-4 col-sm-2 col-md-2">
                        <input type="text" name="cc_postal_code" id="cc_postal_code" class="form-control" value="" required="" autocomplete="off">
                    </div>
                </div><!-- .row -->

                <div class="checkbox margin-top-xs-5">
                    <label class="control-label" for="cc_intl_postal_code"><input type="checkbox" name="cc_intl_postal_code" id="cc_intl_postal_code" value="1"> International Postal Code</label>
                </div><!-- .checkbox -->
            </div><!-- .form-group -->
        </div>
    </div><!-- .row -->

    <div class="form-group">
        <div class="checkbox">
            <label class="control-label"><input type="checkbox" name="confirm_toc" value="1"> I agree to the payment <a href="maintenance-fee-toc-paying-online.html" target="_blank">Terms and Conditions</a>.</label>
        </div>
    </div>

    <div class="form-group">
        <button class="btn btn-primary">Submit Payment</button>
    </div><!-- .form-group -->

    <p><span class="required"></span> required fields</p>

    <div class="legal small">
        <p>To avoid multiple charges, please click the Submit Payment only once.</p>
        <p><i class="fa fa-lg fa-lock padding-right-xs-5"></i> We use secure transmission and encrypted storage to protect your personal information. See our <a href="https://www.bluegreenvacations.com/privacy-policy/" target="_blank">Privacy Policy</a> for further details.</p>
    </div>
